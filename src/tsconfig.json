{
  "version": "1.5.0-beta",
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "../dist"
  },
  "exclude": [
    "dist/",
    "node_modules/*"
  ],
  "filesGlob": [
    "src/**/*.ts"
  ]
}